<% layout('layouts/boilerplate') %>
   
<h3 class="text-center">All Articles</h3>

<% for (let article of els){%>
<div class="card mt-3" >
    <div class="row">
        <div class="col-md-4" id="thumbnaildiv">
            <%  if(article.images[0]){ %>
                <img  crossorigin="anonymous" class="img-fluid " id="thumbnail" alt="" src="<%=article.images[0].url%>" >
            <% } %>
           
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%= article.title %> </h5>
                <p class="card-text"><%= article.description %></p>
                <p class="card-text">
                    <small class="text-muted"><%= article.location%></small>
                </p>
                <a class="btn btn-primary" href="/articles/<%=article._id%>">View <%=article.title%></a>
            </div>
        </div>
    </div>
</div>
<% }%>